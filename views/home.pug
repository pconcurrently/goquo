extends layout

block content
  section.tile-container
    img.sticky-image(src="images/skyline.png")
    section.tile-content
      .form-banner
        .welcome-message
          h1 HOTELS, RESORTS, HOSTELS & MORE
        .search-box 
          .destination  
            i.search-icon.fa.fa-search
            .input-holder
              input#destination-input(placeholder="Enter destination or property")
            .destination-search-results.popup-result
              ul
                li 
                  .result-item
                    i.fa.fa-hotel 
                    span &nbsp Cebu, Phillipines
                li 
                  .result-item
                    i.fa.fa-star
                    span &nbsp Cebu Club, Phillipines
                li 
                  .result-item
                    i.fa.fa-coffee
                    span &nbsp Cebu Central, Phillipines
          .select-date
            .start-date
              .input-group
                span.input-group-addon
                  i.fa.fa-calendar
                input.form-control#start-date-picker
            .end-date
              .input-group
                span.input-group-addon
                  i.fa.fa-calendar
                input.form-control#end-date-picker
          .box-and-button      
            .occupancy-box
              i.box-icon.fa.fa-users
              .box-results
                .box-people
                  span 3 adults, 0 children
                .box-rooms 3 rooms
            .search-button  
              a(href="/search") 
                span.search-text Search
        .search-result-backdrop
block script
  script.
      $('#start-date-picker').datetimepicker({
        format: 'DD MMM YYYY',
        defaultDate: moment()
      });
      $('#end-date-picker').datetimepicker({
        format: 'DD MMM YYYY',
        defaultDate: moment().add(1, 'days')
      });

      $('#destination-input').focus(function() {
        $('.destination-search-results').css('display', 'block');
        $('.search-result-backdrop').css('display', 'block');
      });

      $('.search-result-backdrop').click(function() {
        $(this).css('display', 'none');

        $('.popup-result').css('display', 'none');
      })